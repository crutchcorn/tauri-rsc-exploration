{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "image:default",
    "resources:default",
    "menu:default",
    "tray:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": [
            "../src/main.js"
          ],
          "cmd": "",
          "name": "binaries/its-node",
          "sidecar": true
        }
      ]
    },
    "shell:allow-open"
  ]
}
